height=float(input("enter height cm:"))
weight=float(input("enter weight kg:"))
bmi=weight/(height/100)**2
print("bmi is:",bmi)
if bmi<18.5:
    print("underweight")
elif bmi>=18.5 and bmi<24.9:
    print("normal weight")
elif bmi>=25 and bmi<29.9:
    print("overweight") 
elif bmi>=30:
    print("obesity")
elif bmi==25: 
    print("you are at the borderline between normal weight and overweight") 
elif bmi==30:
    print("you are at the borderline between overweight and obesity")
elif bmi==18.5:
    print("you are at the borderline between underweight and normal weight")  
elif bmi==24.9:
    print("you are at the borderline between normal weight and overweight")
elif bmi==29.9:
    print("you are at the borderline between overweight and obesity")
elif bmi==18.4:
    print("you are just below the normal weight range")              