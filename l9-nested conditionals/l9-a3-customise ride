"""
1.bike
a.bmw
b.ather
2.car
a.volvo
b.Rolls Royce
"""
print("Select your Ride:  ")
ride=(int(input("1.bike \n2.car \nEnter your choice: ")))
if ride==1:
    bike_choice=(int(input("Select your Bike: \n1.bmw \n2.ather \nEnter your choice: ")))
    if bike_choice==1:
        print("You have selected BMW Bike.")
    elif bike_choice==2:
        print("You have selected Ather Bike.")
    else:
        print("Invalid Bike choice.")   
elif ride==2:
    car_choice=(int(input("Select your Car: \n1.volvo \n2.Rolls Royce \nEnter your choice: ")))
    if car_choice==1:
        print("You have selected Volvo Car.")
    elif car_choice==2:
        print("You have selected Rolls Royce Car.")
    else:
        print("Invalid Car choice.")
